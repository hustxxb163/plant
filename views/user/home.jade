extends ../layout

block content
  .container-fluid
    .row-fluid
      .span3.content-box-left
        .profile-box
          .profile-brief
            img.img-rounded.img-avatar(src="#", alt="140x140")
            if user.realname
              h3 #{user.realname}
            else
              h3 #{user.uid}
            .x-lead #{user.uid}
          .profile-detail
            address
              strong Netease, Inc.
              .mail
                 a(href="mailto:#{user.uid}@corp.netease.com") #{user.uid}@corp.netease.com
              abbr(title="Phone") P:
              span  13612341234
              .homepage
                 a(href="http://my.home.com") http://my.home.com
              div Joined on #{filter.ts_simple(user.created_at)}
          .profile-other
        
      .span9.content-box-right
        .filter-bar
        if repos.length
          .repos-list
            each repo in repos
              .repo-info
                a.repo-name(href="/#{user.uid}/#{repo.name}")
                  span.x-lead
                    strong #{repo.name}
                .repo-description #{repo.description}
                .ts-small.muted Last updated at #{filter.ts_simple_time(repo.updated_at)}
        else
          .lead You have no repositories yet
          a.btn.btn-large(href="/new") Create a repository
